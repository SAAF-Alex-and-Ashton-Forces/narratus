<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :body %>
  <%= text_input f, :body %>
  <%= error_tag f, :body %>

  <%= label f, :hooks %>
  <%= multiple_select f, :hooks, ["Option 1": "option1", "Option 2": "option2"] %>
  <%= error_tag f, :hooks %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
